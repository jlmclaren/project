    <div class="container">

      <div class="row">
        <div class="col-md-8">

          <h1>New Work Order</h1>

          <!-- template code -->
          
          <form role="form" class="edit-post" action="/workorders" method="POST">
            <div class="form-group">
            <h3 class="author"> Employee Details</h3>
              <label for="name">Employee Name</label>
              <input type="text" class="form-control" id="name" placeholder="Employee Name" name="name" >
            </div>
            <div class="form-group">
              <label for="employeeId">Employee Number</label>
              <input type="text" class="form-control" id="employeeId" placeholder="Employee Number" name="employeeId">
            </div>
            <h3 class="author">Job Site Details</h3>
            <div class="form-group">
              <label for="jobSiteName">Job Site Name</label>
              <input type="text" class="form-control" id="jobSiteName" placeholder="Job Site Name" name="jobSite.name">
            </div>
            <div class="form-group">
              <label for="jobSiteLocation">Job Site Address</label>
              <input type="text" class="form-control" id="jobSiteLocation" placeholder="Job Site Address" name="jobSite.location">
            </div>
            <div class="form-group">
              <label for="jobSiteTelephone">Job Site Telephone</label>
              <input type="text" class="form-control" id="jobSiteTelephone" placeholder="Job Site Telephone Number" name="jobSite.telephone">
            </div>
            <div class="form-group">
              <label for="jobSiteEmail">Job Site Email</label>
              <input type="text" class="form-control" id="jobSiteEmail" placeholder="Job Site Email" name="jobSite.email">
            </div>
            <h3 class="author">Service Order Details</h3>
            <div class="form-group">
              <label for="serviceOrderProduct">Product Serviced</label>
              <input type="text" class="form-control" id="serviceOrderProduct" placeholder="Product Serviced" name="serviceOrder.product">
            </div>
            <div class="form-group">
              <label for="serviceOrderMake">Product Make</label>
              <input type="text" class="form-control" id="serviceOrderMake" placeholder="Product Make" name="serviceOrder.make">
            </div>
            <div class="form-group">
              <label for="serviceOrderModel">Product Model</label>
              <input type="text" class="form-control" id="serviceOrderModel" placeholder="Product Model" name="serviceOrder.model">
            </div>
            <div class="form-group">
              <label for="serviceOrderSerial">Product Serial Number</label>
              <input type="text" class="form-control" id="serviceOrderSerial" placeholder="Product Serial Number" name="serviceOrder.serial">
            </div>
            <div class="form-group">
              <label for="serviceOrderSummary">Additional Comments</label>
              <textarea rows="12" class="form-control" id="serviceOrderSummary" placeholder="Additional Service Comments" name="serviceOrder.summary"></textarea>
            </div>
            <h3 class="author">Parts Used</h3>
            <div class="form-group">
              <label for="partsQuantity">Quantity of Parts Used</label>
              <input type="text" class="form-control" id="partsQuantity" placeholder="Quantity of Parts Used" name="parts.quantity">
            </div>
            <div class="form-group">
              <label for="partsDesctription">Description of Parts</label>
              <input type="text" class="form-control" id="partsDescription" placeholder="Parts Description" name="parts.description">
            </div>
            <div class="form-group">
              <label for="partsCost">Cost of Parts</label>
              <input type="text" class="form-control" id="partsCost" placeholder="Cost of Parts" name="parts.cost">
            </div>
            <h3 class="author">Labor Details</h3>
            <div class="form-group">
              <label for="laborDate">Date Serviced</label>
              <input type="text" class="form-control" id="laborDate" placeholder="Date Serviced" name="labor.date">
            </div>
            <div class="form-group">
              <label for="laborType">Type of Labor Performed</label>
              <input type="text" class="form-control" id="laborType" placeholder="Type of Labor Performed" name="labor.laborType">
            </div>
            
            <div class="form-group">
              <label for="laborSummary">Summary of Labor Performed</label>
              <textarea rows="12" class="form-control" id="laborSummary" placeholder="Summary" name="labor.summary"></textarea>
            </div>
            <div class="form-group">
              <label for="laborHours">Labor Hours</label>
              <input type="text" class="form-control" id="laborHours" placeholder="Labor Hours" name="labor.hours">
            </div>
            <div class="form-group">
              <label for="laborPrice">Labor Price</label>
              <input type="text" class="form-control" id="laborPrice" placeholder="Labor Price" name="labor.price">
            </div>
            <h3 class="author">Comments</h3>
            <div class="form-group">
              <label for="comments">Overall Comments</label>
              <textarea rows="12" class="form-control" id="comments" placeholder="Comments" name="comments"></textarea>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
          </form>

        </div> <!-- /col-md-8 -->
         <!-- /col-md-4 -->
      </div> <!-- /row -->

    </div>    

